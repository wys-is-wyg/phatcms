{
  "name": "phatcms",
  "version": "1.0.0",
  "description": "A lightweight OOP MVC CMS using PHP, Vanilla JS, HTMX, and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production"
  },
  "keywords": [
    "cms",
    "php",
    "mvc",
    "htmx",
    "tailwind"
  ],
  "author": "PhatCMS Team",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "laravel-mix": "^6.0.49",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2"
  },
  "dependencies": {
    "htmx.org": "^1.9.2"
  }
}
